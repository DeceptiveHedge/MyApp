<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>My-Mini-Map</name>

    <description>
        A map application which allows you to create custom pointers, get route to these pointers, save/load maps and share maps with friends. 
    </description>

    <author email="monj1_14@uni.worc.ac.uk">
        James Money
    </author>
	
	<!-- required plugins go here -->
    <plugin name="cordova-plugin-dialogs"/>
    <plugin name="cordova-plugin-local-notification" version="0.8" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
    <plugin name="cordova-plugin-geolocation-android-activator" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <access origin="*" />
        

</widget>